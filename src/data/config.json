{
  "app": {
    "name": "Análisis de Pymes Hoteleras",
    "version": "1.0.0",
    "description": "Sistema de análisis de sostenibilidad y calidad para hoteles en Barranquilla"
  },
  "scraping": {
    "platforms": ["tripadvisor", "booking", "google"],
    "delay": 3000,
    "maxRetries": 3
  },
  "filters": {
    "sustainabilityMin": 0,
    "qualityMin": 0,
    "defaultPlatforms": ["tripadvisor", "booking", "google"]
  },
  "export": {
    "csvFilename": "analisis_hoteles_barranquilla.csv",
    "pdfFilename": "analisis_hoteles_barranquilla.pdf"
  },
  "ui": {
    "defaultTab": "control",
    "autoSwitchToResults": true
  }
}
